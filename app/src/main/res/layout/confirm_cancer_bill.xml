<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:background="@drawable/bg_confirm_cancer">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="@string/txt_confirm_cancer"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_below="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:id="@+id/btn_cancel_confirm"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hủy bỏ"
                android:gravity="center"
                android:fontFamily="@font/nunito_bold"
                android:textSize="12dp"
                android:paddingVertical="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="5dp"
                android:elevation="5dp"
                android:textColor="@color/black"
                android:background="@drawable/bg_btn_cancer_confirm"/>

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hủy đơn"
                android:gravity="center"
                android:fontFamily="@font/nunito_bold"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:paddingVertical="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"
                android:elevation="5dp"
                android:background="@drawable/bg_btn_confirm"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical"
   android:gravity="top|center"
    tools:context=".Activity.SignIn.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_marginTop="30dp"
        android:layout_gravity="left"
        android:background="@drawable/border_around"
        android:src="@drawable/ic_left_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="55dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nhập số điện thoại của bạn để nhận mã xác nhận lấy lại mật khẩu"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_edit_text"
        android:hint="Số điện thoại đã đăng kí"
        android:paddingHorizontal="20dp"
        android:singleLine="true"
        android:inputType="phone"
        android:textColor="#0D0D0D" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Lấy lại mật khẩu"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:id="@+id/btnGetPassword"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:background="@drawable/border_button_fb"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/tvBackToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Quay lại dăng nhập"
        android:textStyle="bold"
        android:textColor="#7583CA"
        android:textSize="14sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical"
   android:gravity="top|center"
    tools:context=".Activity.SignIn.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_marginTop="30dp"
        android:layout_gravity="left"
        android:background="@drawable/border_around"
        android:src="@drawable/ic_left_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="55dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nhập email của bạn để nhận mã xác nhận lấy lại mật khẩu"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_edit_text"
        android:hint="Nhập email"
        android:paddingHorizontal="20dp"
        android:singleLine="true"
        android:textColor="#0D0D0D" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtCapcha"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập mã xác thực"
            android:inputType="number"
            android:layout_weight="0.5"
            android:paddingHorizontal="20dp"
            android:singleLine="true"
            android:textColor="#0D0D0D" />

        <TextView
            android:id="@+id/tvCapcha"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12334"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/blue_active"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/img_refresh"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:src="@drawable/ic_refresh"
            android:layout_height="20dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Lấy lại mật khẩu"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:id="@+id/btnGetPassword"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:background="@drawable/border_button_fb"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/tvBackToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Quay lại dăng nhập"
        android:textStyle="bold"
        android:textColor="#7583CA"
        android:textSize="14sp" />
</LinearLayout>
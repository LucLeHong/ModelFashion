<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_marginHorizontal="16dp"
    tools:context=".Activity.SignIn.ChangePasswordActivity">

    <ImageView
        android:id="@+id/imgBackToGetCapcha"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_around"
        android:src="@drawable/ic_left_arrow" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="55dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/edtNewPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_edit_text"
        android:hint="Nhập mật khẩu mới"
        android:paddingHorizontal="20dp"
        android:singleLine="true"
        android:textColor="#0D0D0D" />

    <EditText
        android:id="@+id/edtConfirmNewPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_edit_text"
        android:hint="Nhập lại mật khẩu"
        android:paddingHorizontal="20dp"
        android:singleLine="true"
        android:textColor="#0D0D0D" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_button_fb"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/ll_item_notifi"
    android:background="@drawable/bg_item_notifi">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_notifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/img_menu_notifi"
            android:fontFamily="@font/nunito_bold"
            android:maxLines="1"
            android:text="Tiêu đề"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_menu_notifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_menu_notifi"
            android:visibility="gone"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginRight="20dp"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/tv_content_notifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:maxLines="3"
        android:minLines="3"/>
    <TextView
        android:id="@+id/tv_date_notifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:alpha="0.5"
        android:gravity="right"
        />




</LinearLayout>